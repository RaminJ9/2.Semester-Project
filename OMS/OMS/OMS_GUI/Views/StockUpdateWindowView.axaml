<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OMS_GUI.Views.StockUpdateWindowView"
             Width="824" Height="600"
             xmlns:vm="clr-namespace:OMS_GUI.ViewModels"
             x:DataType="vm:StockUpdateWindowViewModel">
    
    <StackPanel Margin="20" Spacing="15">
        <TabItem Header="Stock Updater" FontWeight="Bold" Foreground="Black"/>

        <!-- Product ID Row -->
        <Grid Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Product ID:" Grid.Column="0"
                       FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" FontSize="16" Height="30"/>
            <Button Content="Load" Grid.Column="2"
                    FontSize="16" Height="30" Width="80" Margin="10,0,0,0"/>
        </Grid>

        <!-- Stock Row -->
        <Grid Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Stock:" Grid.Column="0"
                       FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" FontSize="16" Height="30"/>
            <Button Content="Change" Grid.Column="2"
                    FontSize="16" Height="30" Width="80" Margin="10,0,0,0"/>
        </Grid>

        <!-- Available Row -->
        <Grid Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Available:" Grid.Column="0"
                       FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" FontSize="16" Height="30"/>
            <Button Content="Change" Grid.Column="2"
                    FontSize="16" Height="30" Width="80" Margin="10,0,0,0"/>
        </Grid>

        <!-- Update Button -->
        <Button Content="Update"
                FontSize="16"
                Height="35"
                Width="120"
                HorizontalAlignment="Center"
                Margin="0,30,0,0"/>
    </StackPanel>
</UserControl>
