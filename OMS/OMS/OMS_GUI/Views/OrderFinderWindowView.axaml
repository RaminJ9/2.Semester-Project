<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OMS_GUI.Views.OrderFinderWindowView"
             Width="824" Height="600"
             xmlns:vm="clr-namespace:OMS_GUI.ViewModels"
             x:DataType="vm:OrderFinderWindowViewModel">
    
        <StackPanel Margin="20" Spacing="15">
            <TabItem Header="Order Finder" FontWeight="Bold" Foreground="Black"/>

            <!-- Search Fields -->
            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Order ID:" Grid.Row="0" Grid.Column="0"
                           FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" FontSize="16" Height="30"/>

                <TextBlock Text="Customer ID:" Grid.Row="1" Grid.Column="0"
                           FontSize="16" VerticalAlignment="Center" Margin="0,10,10,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" FontSize="16" Height="30" Margin="0,10,0,0"/>
            </Grid>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Search" FontSize="16" Height="35" Width="100"/>
                <Button Content="Clear" FontSize="16" Height="35" Width="100"/>
            </StackPanel>

            <!-- Orders Section -->
            <TextBlock Text="Orders" FontSize="16" FontWeight="Bold" Margin="0,20,0,5"/>

            <!-- Empty Orders Box -->
            <Border BorderBrush="Gray" BorderThickness="1" Height="150">
                <TextBlock Text="No orders to display"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="Gray"/>
            </Border>
        </StackPanel>
</UserControl>
