<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
		<Button Content="Hello world"></Button>
    </Border>
  </Design.PreviewWith>

  <!-- Add Styles Here -->
	<Style Selector="Button">
		<Setter Property="Foreground" Value="{DynamicResource ResourceKey=PrimaryText}"></Setter>
		<Setter Property="Background" Value="{DynamicResource ResourceKey=PrimaryButtonBackground}"></Setter>
		<Setter Property="CornerRadius" Value="8"/>
	</Style>

	<Style Selector="Button:pointerover /template/ ContentPresenter">
		<Setter Property="Foreground" Value="{DynamicResource ResourceKey=PrimaryHoverText}"></Setter>
		<Setter Property="Background" Value="{DynamicResource ResourceKey=PrimaryHoverBackground}"></Setter>
	</Style>
</Styles>
