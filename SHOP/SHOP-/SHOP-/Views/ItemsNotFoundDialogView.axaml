<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SHOP.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SHOP.Views.ItemsNotFoundDialogView"
             x:DataType="vm:ItemsNotFoundDialogViewModel"
             Background="Transparent">
    
    <Design.DataContext><vm:ItemsNotFoundDialogViewModel></vm:ItemsNotFoundDialogViewModel></Design.DataContext>
    
    
    

    <!-- Main Dialog Container -->
    <Border Padding="25"
            Background="{StaticResource CardBackgroundBrush}" 
            CornerRadius="8"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            MinWidth="300" MaxWidth="450"
            BoxShadow="0 5 15 0 #2A000000"
            ClipToBounds="True"> <!-- Subtle Shadow --> <!-- Light Gray Background -->

        <StackPanel Spacing="18">

            <!-- Optional: Icon -->
            <TextBlock Text="⚠️" 
                       FontSize="36"
                       Foreground="{StaticResource PrimaryActionBrush}" 
                       HorizontalAlignment="Center"/> <!-- Amber color for warning --> <!-- Warning Emoji or use FontIcon -->

            <!-- Message Text -->
            <TextBlock Text="{Binding Message}"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       FontSize="15"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,5,0,10"/> <!-- Add some margin -->

            <!-- Action Button -->
            <Button Content="OK"
                    Command="{Binding ItemNotFoundCommand}" 
                    Classes="primary" 
                    HorizontalAlignment="Center"
                    MinWidth="100"/> <!-- Use Amber button style --> <!-- Bind to the Close command -->

        </StackPanel>
    </Border>

</UserControl>
