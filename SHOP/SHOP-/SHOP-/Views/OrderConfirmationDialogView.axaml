<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SHOP.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SHOP.Views.OrderConfirmationDialogView"
             x:DataType="vm:OrderConfirmationDialogViewModel"
             Background="Transparent">
    
    <Design.DataContext><vm:OrderConfirmationDialogViewModel></vm:OrderConfirmationDialogViewModel></Design.DataContext>

    
    <Border Padding="25"
            Background="{StaticResource CardBackgroundBrush}" 
            CornerRadius="8"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            MinWidth="300" MaxWidth="450"
            BoxShadow="0 5 15 0 #2A000000"
            ClipToBounds="True"> <!-- Subtle Shadow --> <!-- Light Gray Background -->

        <StackPanel Spacing="18">

            <!-- Confirmation Message -->
            <TextBlock Text="{Binding Message}" FontWeight="Bold" FontSize="18" />

            <!-- Order ID -->
            <TextBlock Text="Order ID:" FontWeight="SemiBold" />
            <TextBlock Text="{Binding OrderId}" />

            <!-- Product Summary List -->
            <TextBlock Text="Items:" FontWeight="SemiBold" Margin="0,10,0,0"/>
            <ItemsControl ItemsSource="{Binding ProductSummary}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Subtotal and Total -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="Subtotal: " FontWeight="SemiBold"/>
                <TextBlock Text="{Binding SubTotal, StringFormat=C}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total: " FontWeight="SemiBold"/>
                <TextBlock Text="{Binding SubTotal, StringFormat=C}" />
            </StackPanel>

            <!-- Confirm / Cancel Buttons (assuming they already exist) -->
            <!-- ... -->

        </StackPanel>
    </Border>
    
</UserControl>
