<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SHOP.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SHOP.Views.ContentPageView"
             x:DataType="vm:ContentPageViewModel">
   
    
    <Border Background="#FFF8F4E6" Padding="20" CornerRadius="10" Margin="20" BorderBrush="#FFD6C7A1" BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding ContentText}"
                       TextWrapping="Wrap"
                       FontSize="16"
                       Foreground="#FF333333"
                       LineHeight="24"
                       FontFamily="Segoe UI"
                       TextTrimming="None"
                       Padding="10"/>
        </ScrollViewer>
    </Border>
    
    
    
</UserControl>
